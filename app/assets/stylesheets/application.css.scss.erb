$home-bg-gif: '<%= Page.find_by_title("Home").images.first.image.remote_url %>';
$sound-bg-gif: '<%= Page.find_by_title("Sound").images.first.image.remote_url %>';
$visions-bg-gif: '<%= Page.find_by_title("Visions").images.first.image.remote_url %>';
$space-bg-gif: '<%= Page.find_by_title("Space").images.first.image.remote_url %>';
