.image
	= link_to image_tag(image.image.remote_url)
	.name= image.image_name
	.actions
		- if image.imageable_type == "SubPage"
			= link_to icon("trash", "Delete Image"), admin_sub_page_image_url(image.imageable_id, image.id), method: :delete, confirm: "Are you sure?", disable_with: "Deleting...", class: "btn btn-danger"
		- else
			= link_to icon("trash", "Delete Image"), admin_gallery_image_url(image.imageable_id, image.id), method: :delete, confirm: "Are you sure?", disable_with: "Deleting...", class: "btn btn-danger"